{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs",                          
    "strict": true,                                
    "esModuleInterop": true,                       
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,      
    "outDir": "./dist",                            
    "rootDir": "./src",                            
    "resolveJsonModule": true,                     
    "jsx": "react",                                
    "lib": ["dom", "es2015"]                       
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
